#include <iostream>
using namespace std;
int main() {
	int n, nilai_total = 0;
	
	cout << "Masukkan banyak nilai: ";
	cin >> n;
	 
	int nilai[n];
	
	for (int i = 0; i < n; i++) {
		cout << "Masukkan nilai ke-" << i + 1 << ": ";
		cin >> nilai[i];
		
		nilai_total+= nilai[i];
	}
	
	cout << "Jumlahnya adalah: " << nilai_total << endl;
	
	return 0;
}
